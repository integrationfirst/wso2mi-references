<?xml version="1.0" encoding="UTF-8"?>
<sequence name="Download_File_To_SFTP" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <header expression="$body/mediate/Cookie" name="Cookie" scope="transport"/>
    <propertyGroup>
        <property expression="$ctx:uri.var.docId" name="fileId" scope="default" type="STRING"/>
        <property expression="$body/mediate/targetDir" name="targetDir" scope="default" type="STRING"/>
        <property expression="$body/mediate/endpoint" name="endpoint" scope="default" type="STRING"/>
        <property expression="$body/mediate/target" name="target" scope="default" type="STRING"/>
    </propertyGroup>
    <log level="full">
        <property name="Message" value="Loading the file from remote server"/>
        <property expression="$ctx:fileId" name="FileId"/>
    </log>
    <propertyGroup>
        <property expression="fn:concat($ctx:endpoint,$ctx:fileId)" name="uri.var.fileurl" scope="default" type="STRING"/>
    </propertyGroup>
    <call>
        <endpoint>
            <http method="get" uri-template="{uri.var.fileurl}">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <propertyGroup>
        <property expression="fn:substring($trp:Content-Disposition,18)" name="filename" scope="default" type="STRING"/>
        <property name="transport.vfs.ContentType" scope="default" type="STRING" value="application/binary"/>
    </propertyGroup>
    <log>
        <property name="Message" value="Download completed"/>
        <property expression="$ctx:filename" name="Filename"/>
    </log>
    <filter regex="SFTP" source="$target">
        <then>
            <sequence key="Upload_To_SFTP_Seq"/>
        </then>
        <else>
            <sequence key="Write_To_Local_Storage"/>
        </else>
    </filter>
    <payloadFactory media-type="json">
        <format>{&#xd;
"filename": "$1",&#xd;
"fileId": $2&#xd;
}</format>
        <args>
            <arg evaluator="xml" expression="$ctx:filename"/>
            <arg evaluator="xml" expression="$ctx:fileId"/>
        </args>
    </payloadFactory>
    <respond/>
</sequence>
