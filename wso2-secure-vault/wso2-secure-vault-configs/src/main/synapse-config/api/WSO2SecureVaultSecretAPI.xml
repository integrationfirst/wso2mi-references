<?xml version="1.0" encoding="UTF-8"?>
<api context="/secrets/wso2vault" name="WSO2SecureVaultSecretAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" url-mapping="/read">
        <inSequence>
            <property expression="json-eval($.secretAlias)" name="alias" scope="default" type="STRING"/>
            <log>
                <property name="message" value="Reading secret from WSO2 Secure Vault"/>
                <property expression="$ctx:alias" name="alias"/>
            </log>
            <property expression="wso2:vault-lookup(get-property('alias'))" name="secret" scope="default" type="STRING"/>
            <log>
                <property expression="$ctx:secret" name="secret"/>
            </log>
            <payloadFactory media-type="json">
                <format>{&#xd;
	"secretAlias": $1,&#xd;
    "secretValue": $2&#xd;
}</format>
                <args>
                    <arg evaluator="json" expression="$ctx:alias"/>
                    <arg evaluator="xml" expression="$ctx:secret"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
