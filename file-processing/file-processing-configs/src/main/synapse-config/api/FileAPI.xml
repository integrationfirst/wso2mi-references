<?xml version="1.0" encoding="UTF-8"?>
<api context="/files" name="FileAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" url-mapping="/upload">
        <inSequence>
            <sequence key="FileReceiving_Process_Seq"/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="GET" uri-template="/download/{docId}">
        <inSequence>
            <sequence key="Download_Binary_Seq"/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="POST" url-mapping="/uploadSftp">
        <inSequence>
            <sequence key="Local_File_To_SFTP"/>
            <payloadFactory media-type="json">
                <format>{&#xd;
"file": $1&#xd;
}</format>
                <args>
                    <arg evaluator="xml" expression="get-property('FILE_PATH')"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
