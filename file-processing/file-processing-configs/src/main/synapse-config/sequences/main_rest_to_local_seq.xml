<?xml version="1.0" encoding="UTF-8"?>
<sequence name="main_rest_to_local_seq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <propertyGroup>
        <property expression="$body/mediate/docId" name="fileId" scope="default" type="STRING"/>
        <property expression="$body/mediate/targetDir" name="targetDir" scope="default" type="STRING"/>
        <property expression="$body/mediate/endpoint" name="endpoint" scope="default" type="STRING"/>
        <property expression="$body/mediate/target" name="target" scope="default" type="STRING"/>
        <property expression="$body/mediate/filename" name="filename" scope="default" type="STRING"/>
    </propertyGroup>
    <log level="full">
        <property name="Message" value="Loading the file from remote server"/>
        <property expression="$ctx:fileId" name="FileId"/>
    </log>
    <propertyGroup>
        <property expression="fn:concat($ctx:endpoint,$ctx:fileId)" name="uri.var.fileurl" scope="default" type="STRING"/>
    </propertyGroup>
    <call>
        <endpoint>
            <http method="get" uri-template="{uri.var.fileurl}">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <propertyGroup>
        <property name="transport.vfs.ContentType" scope="default" type="STRING" value="application/json"/>
        <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
    </propertyGroup>
    <log>
        <property name="Message" value="Download completed"/>
        <property expression="$ctx:filename" name="Filename"/>
    </log>
    <property expression="json-eval($.aiData)" name="stringifiedAiData" scope="default" type="STRING"/>
    <property expression="$ctx:stringifiedAiData" name="aiData" scope="default" type="STRING"/>
    <file.write configKey="LOCAL_FILE_DIR">
        <filePath>{fn:concat($ctx:targetDir,'/',$ctx:filename)}</filePath>
        <contentOrExpression>{$ctx:aiData}</contentOrExpression>
        <mimeType>Automatic</mimeType>
        <compress>false</compress>
        <writeMode>Overwrite</writeMode>
        <enableStreaming>false</enableStreaming>
        <appendNewLine>false</appendNewLine>
        <enableLock>false</enableLock>
        <includeResultTo>Message Body</includeResultTo>
        <updateLastModified>true</updateLastModified>
    </file.write>
    <payloadFactory media-type="json">
        <format>{"filename": "$1"}</format>
        <args>
            <arg evaluator="xml" expression="$ctx:filename"/>
        </args>
    </payloadFactory>
    <respond/>
</sequence>
